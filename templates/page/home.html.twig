{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}
{% block class %}home{% endblock %}

{% block body %}
    <img class="bg-image" src="{{ asset('img/avanton-creche-facade-1300x867.jpg') }}" alt="">
    <section class="articles">
        <div class="section-title first-color">
            <div class="container">
                <p class="text-center">L'actualité</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <div class="row">
                    {% for article in articles %}
                        {% set description = article.content|striptags %}
                        <div class="col-xl-4 mb-5">
                            <div class="card" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-in-sine">
                                {% if article.picture %}
                                <img src="{{ asset('uploads/img/' ~ article.picture) }}" class="card-img-top" alt="...">
                                {% else %}
                                <img src="{{ asset('img/avanton-creche-facade-1300x867.jpg') }}" class="card-img-top" alt="...">
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">{{ article.title|upper }}</h5>
                                    <div class="card-text article-content">
                                        {{ description|slice(0, 100) }}
                                        {% if description|length > 100 %} ...{% endif %}
                                    </div>
                                    <p class="card-text">
                                        <small class="text-body-secondary">
                                        Publié le {{ article.createdAt|date('d/m/Y') }}
                                        </small>
                                    </p>
                                    <a href="{{ path('app_page_article_show', {'id': article.id}) }}" class="btn btn-outline-warning">Lire</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col-sm-4 offset-sm-4">
                        <a href="{{ path('app_page_articles') }}"><button class="btn btn-outline-warning w-100 text-dark">Voir toutes les actualités</button></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="home-life">
        <div class="section-title second-color">
            <div class="container">
                <p class="text-center">La vie du centre</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-4 mb-5">
                        <a class="ellipse position-relative" href="page/accueil-periscolaire">
                            <div class="ellipse-container">
                                {{ include('icons/ellipse.html.twig') }}
                            </div>
                            <div class="icon">
                                <span>{{ include('icons/house.html.twig') }}</span>
                                <span>L'accueil</span>
                                <span>prériscolaire</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-4 mb-5">
                        <a class="ellipse position-relative" href="page/accueil-loisirs">
                            <div class="ellipse-container">
                                {{ include('icons/ellipse.html.twig') }}
                            </div>
                            <div class="icon">
                                <span>{{ include('icons/balloon.html.twig') }}</span>
                                <span>L'accueil</span>
                                <span>de loisirs</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-4 mb-5">
                        <a class="ellipse position-relative" href="page/association">
                            <div class="ellipse-container">
                                {{ include('icons/ellipse.html.twig') }}
                            </div>
                            <div class="icon">
                                <span>{{ include('icons/person.html.twig') }}</span>
                                <span>L'association</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="home-info">
        <div class="section-title third-color">
            <div class="container">
                <p class="text-center">Infos pratiques</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <p>Horaires d'accueil</p>
            </div>
        </div>
    </section>
{% endblock %}