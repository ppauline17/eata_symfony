                    </div>
                    <div class="col-md-6 mb-3">
                        <img src="public/img/avanton-creche-exterieur-2-1300x867.jpg" alt="" class="img-fluid" data-aos="fade-left" data-aos-duration="3000">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="periscolaire-team">
        <div class="section-title third-color mt-5 mb-5">
            <div class="container">
                <p class="text-center">L'Ã©quipe d'animations</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <div class="row mb-5">
                    {% for teammate in teammates %}
                    {% if teammate.hierarchy == 1 %}
                    <div class="col-md-6 offset-md-3">
                        <div class="sun position-relative" data-aos="zoom-in">
                            <div class="sun-container">
                                {{ include('icons/sun.html.twig') }}
                            </div>
                            <div class="name">
                                <span>{{ teammate.firstname }} {{ teammate.lastname }}</span>
                            </div>
                        </div>
                        <div class="text-center mb-3 mt-3">{{ teammate.job|upper }}</div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                <div class="row mb-5">
                    {% for teammate in teammates %}
                    {% if teammate.hierarchy == 2 %}
                    <div class="col-md-6 offset-md-3">
                        <div class="cloud position-relative" data-aos="zoom-in-up">
                            <div class="cloud-container cloud-director">
                                {{ include('icons/cloud.html.twig') }}
                            </div>
                            <div class="name mt-3">
                                <span>{{ teammate.firstname }} {{ teammate.lastname }}</span>
                            </div>
                        </div>
                        <div class="text-center mb-3 mt-3">{{ teammate.job|upper }}</div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                <div class="row">
                    {% for teammate in teammates %}
                    {% if teammate.hierarchy == 3 %}
                    <div class="col-sm-6 col-md-4 mb-3">
                        <div class="cloud position-relative" data-aos="zoom-in-up">
                            <div class="cloud-container">
                                {{ include('icons/cloud.html.twig') }}
                            </div>
                            <div class="name mt-3">
                                <span>{{ teammate.firstname }} {{ teammate.lastname }}</span>
                            </div>
                        </div>
                        <div class="text-center mb-3 mt-3">{{ teammate.job|upper }}</div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}