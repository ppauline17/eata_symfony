{% extends "base.html.twig" %}

{% block title %}L'association{% endblock %}
{% block class %}periscolaire{% endblock %}

{% block body %}
    <section class="title">
        <div class="section-title first-color mt-5 mb-5">
            <div class="container">
                <p class="text-center">L'association</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <div class="row description mt-3">
                    <div class="col-md-6">
                        {{ description.content|raw }}
                    </div>
                    <div class="col-md-6 mb-3">
                        <img src="{{ asset('img/avanton-creche-exterieur-2-1300x867.jpg') }}" alt="" class="img-fluid" data-aos="fade-left" data-aos-duration="3000">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="association-team">
        <div class="section-title second-color mt-5 mb-5">
            <div class="container">
                <p class="text-center">Les membres du bureau</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <div class="row mb-5 director">
                    {% for teammate in teammates %}
                    {% if teammate.hierarchy == 1 or teammate.hierarchy == 2 %}
                    <div class="col-md-4 offset-md-4 mb-3">
                        <div class="card " data-aos="flip-down">
                            <ul class="list-group list-group-flush rounded-5">
                                <li class="list-group-item text-center">{{ teammate.firstname }} {{ teammate.lastname }}</li>
                                <li class="list-group-item text-center">{{ teammate.job }}</li>
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                <div class="row mb-5 team">
                    {% for teammate in teammates %}
                    {% if teammate.hierarchy == 3 %}
                    <div class="col-md-4 mb-3">
                        <div class="card" data-aos="flip-down">
                            <ul class="list-group list-group-flush rounded-5">
                                <li class="list-group-item text-center">{{ teammate.firstname }} {{ teammate.lastname }}</li>
                                <li class="list-group-item text-center">{{ teammate.job }}</li>
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <section class="association-infos mb-5">
        <div class="section-title third-color mt-5 mb-5">
            <div class="container">
                <p class="text-center">Informations</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                {{ informations.content|raw }}
            </div>
        </div>
    </section>
{% endblock %}