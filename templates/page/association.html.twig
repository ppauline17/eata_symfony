{% extends "base.html.twig" %}

{% block title %}L'association{% endblock %}
{% block class %}periscolaire{% endblock %}

{% block body %}
    <section class="title">
        <div class="section-title first-color mt-5 mb-5">
            <div class="container">
                <p class="text-center">L'association</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <div class="row mt-3">
                    <div class="col-md-6">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus nostrum eos maiores inventore, dignissimos facere aut soluta laborum debitis voluptate sapiente, error ipsa culpa hic voluptatibus! Sit fugit amet illum.</p>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus nostrum eos maiores inventore, dignissimos facere aut soluta laborum debitis voluptate sapiente, error ipsa culpa hic voluptatibus! Sit fugit amet illum.</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <img src="public/img/avanton-creche-exterieur-2-1300x867.jpg" alt="" class="img-fluid" data-aos="fade-left" data-aos-duration="3000">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="association-team">
        <div class="section-title second-color mt-5 mb-5">
            <div class="container">
                <p class="text-center">Les membres du bureau</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <div class="row mb-5 director">
                    {% for teammate in teammates %}
                    {% if teammate.teammate_director == 1 or teammate.teammate_director == 2 %}
                    <div class="col-md-4 offset-md-4 mb-3">
                        <div class="card " data-aos="flip-down">
                            <ul class="list-group list-group-flush rounded-5">
                                <li class="list-group-item text-center">{{ teammate.teammate_firstname }} {{ teammate.teammate_name }}</li>
                                <li class="list-group-item text-center">{{ teammate.teammate_job|upper }}</li>
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                <div class="row mb-5 team">
                    {% for teammate in teammates %}
                    {% if teammate.teammate_director == 0 %}
                    <div class="col-md-4 mb-3">
                        <div class="card" data-aos="flip-down">
                            <ul class="list-group list-group-flush rounded-5">
                                <li class="list-group-item text-center">{{ teammate.teammate_firstname }} {{ teammate.teammate_name }}</li>
                                <li class="list-group-item text-center">{{ teammate.teammate_job|upper }}</li>
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <section class="association-infos">
        <div class="section-title third-color mt-5 mb-5">
            <div class="container">
                <p class="text-center">Informations</p>
            </div>
        </div>
        <div class="content">
            <div class="container">
                
            </div>
        </div>
    </section>
{% endblock %}