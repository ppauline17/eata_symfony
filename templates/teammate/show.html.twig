    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ teammate.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ teammate.lastname }}</td>
            </tr>
            <tr>
