{{ form_start(form) }}
    <div class="mb-3">
        <label for="lastname">Nom</label>
        {{ form_widget(form.lastname) }}
    </div>
    <div class="mb-3">
        <label for="firstname">Prénom</label>
        {{ form_widget(form.firstname) }}
    </div>
    <div class="mb-3">
        <label for="login">Identifiant</label>
        {{ form_widget(form.login) }}
    </div>
    <div class="mb-3">
        <label for="newPassword">Mot de passe</label>
        <div class="input-group mb-3">
            {{ form_widget(form.newPassword, {'attr': {'class': 'form-control', 'type': 'password', 'aria-label': 'Password', 'aria-describedby': 'basic-addon1'}}) }}
            {{ form_errors(form.newPassword) }}
            <span class="input-group-text" id="basic-addon1">
                <span id="eye">{{ include('icons/eye.html.twig') }}</span>
                <span class="d-none" id="eyeSlash">{{ include('icons/eye-slash.html.twig') }}</span>
            </span>
        </div>
        {# <div id="passwordHelpBlock" class="form-text">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </div> #}
    </div>
    <div class="mb-3">
        <label for="roles">Droits d'accès</label>
        {{ form_widget(form.roles) }}
    </div>
    <button class="btn btn-outline-dark">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}


