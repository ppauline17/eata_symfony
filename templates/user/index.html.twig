{% extends 'admin/dashboard.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}
    <h3>Utilisateurs</h3>
    <a href="{{ path('app_register') }}" class="btn text-primary">
        {{ include('icons/plus.html.twig') }} Créer
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Login</th>
                <th>Droits d'accès</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-dark">{{ user.lastname }}</a></td>
                <td><a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-dark">{{ user.firstname }}</a></td>
                <td><a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-dark">{{ user.login }}</a></td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-dark">
                    {% for role in user.roles %}
                        {{ role|json_encode }}
                    {% endfor %}
                    </a>
                </td>
                <td class="col-1">
                    <div class="row">
                        <div class="col-6">
                            {{ include('user/_update_btn.html.twig') }}
                        </div>
                        <div class="col-6">
                            {{ include('user/_delete_btn.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
