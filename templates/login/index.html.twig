{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4">
                <div class="card p-4 shadow">
                    <div class="card-body">
                        <form action="{{ path('app_login') }}" method="post">
                            {% if error %}  
                                <div class="mb-3">Identifiants invalides</div>
                            {% endif %}
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="login" name="_username" value="{{ last_username }}" placeholder="identifiant">
                                <label for="login">Identifiant</label>
                            </div>
                            <div class="form-floating mb-5">
                                <input type="password" class="form-control" id="password" name="_password" placeholder="mot de passe">
                                <label for="login">Mot de passe</label>
                            </div>
                            <div class="row">
                                <div class="col-6 offset-3">
                                    <button class="btn btn-dark w-100" type="submit">Se connecter</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        

        
    </div>
</section>
    
{% endblock %}
