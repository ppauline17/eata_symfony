{% extends 'admin/dashboard.html.twig' %}

{% block title %}Administration{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_admin_mercredi') }}" class="text-dark">Accueil du mercredi</a></li>
    <li class="breadcrumb-item">Tarifs</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <h3>Les tarifs du mercredi</h3>
        <table class="table mb-5">
            <thead>
                <tr>
                    <th>Quotient familial</th>
                    <th>Prix</th>
                    <th>Modifier</th>
                </tr>
            </thead>
            <tbody>
            {% for price in prices %}
                <tr>
                    <td>{{ price.familyQuotient }}</td>
                    <td class="col-2">{{ price.halfDay|number_format(2, '.', ',') ~ ' €' }}</td>
                    <td class="col-1">
                        <a href="{{ path('app_price_edit', {'id': price.id}) }}">{{ source('@icons_path/update.svg') }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <h3>Les remises du mercredi</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Ville</th>
                    <th>Réduction</th>
                    <th>Modifier</th>
                </tr>
            </thead>
            <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ city.name }}</td>
                    <td class="col-2">{{ city.wednesdayReduce|number_format(2, '.', ',') ~ ' €' }}</td>
                    <td class="col-1">
                        <a href="{{ path('app_city_edit', {'id': city.id}) }}">{{ source('@icons_path/update.svg') }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <h3>Prix du repas</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Ville</th>
                    <th>Prix</th>
                    <th>Modifier</th>
                </tr>
            </thead>
            <tbody>
            {% for city in cities %}
                {% if city.name == "ST MARTIN LA PALLU" %}
                <tr>
                    <td>{{ city.name }}</td>
                    <td class="col-2">{{ city.mealPrice|number_format(2, '.', ',') ~ ' €' }}</td>
                    <td class="col-1">
                        <a href="{{ path('app_city_edit', {'id': city.id}) }}">{{ source('@icons_path/update.svg') }}</a>
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}