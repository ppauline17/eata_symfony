{% extends 'admin/dashboard.html.twig' %}

{% block title %}Document{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_admin_informations') }}" class="text-dark">Infos pratiques</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_document_index') }}" class="text-dark">Documents</a></li>
    <li class="breadcrumb-item">{{ document.label }}</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <h3>Document</h3>

        <table class="table">
            <tbody>
                <tr>
                    <th>Nom du document</th>
                    <td>{{ document.label }}</td>
                </tr>
                <tr class="col-8">
                    <th>Document</th>
                    <td><iframe src="{{ asset('uploads/doc/' ~ document.documentSource) }}" class="w-100"></iframe></td>
                </tr>
                <tr class="col-8">
                    <th>Accueil</th>
                    <td>
                    {% for category in document.category %}
                        <li>{{ category.label }}</li>
                    {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Modifier</th>
                    <td>
                        <a href="{{ path('app_document_edit', {'id': document.id}) }}" title="Modifier" class="btn">
                            {{ include('icons/update.html.twig') }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <th>Supprimer</th>
                    <td>{{ include('document/_delete_btn.html.twig') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
