{% extends 'admin/dashboard.html.twig' %}

{% block title %}New Document{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_admin_informations') }}" class="text-dark">Infos pratiques</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_document_index', {'category_label': category_label}) }}" class="text-dark">Documents</a></li>
    <li class="breadcrumb-item">Créer</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-6 offset-lg-3">
    <h3>Créer un nouveau document</h3>

    {{ form_start(form) }}
        <div class="mb-3">
            <label for="lastname">Nom du document</label>
            {{ form_widget(form.label) }}
        </div>
        {% if document.oldDocument != null %}
        <div class="mb-3">
            <iframe src="{{ asset('uploads/doc/' ~ document.oldDocument) }}" class="w-100"></iframe>
        </div>
        {% endif %}
        <div class="mb-3">
            <label for="firstname">Document (PDF)</label>
            {{ form_widget(form.documentSource) }}
            {{ form_errors(form.documentSource) }}
        </div>
        <div class="mb-3">
            {% if category_label != 'association' %}
            <label for="category">Pour quel accueil ?</label>
            {% endif %}
            {{ form_widget(form.category) }}
            {{ form_errors(form.category) }}
        </div>
        {% include('components/_buttonSave.html.twig') %}
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
